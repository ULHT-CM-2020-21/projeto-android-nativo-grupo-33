<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:background="@android:color/black">

        <TextView
            android:id="@+id/title_danger"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="@string/estou_em_perigo"
            android:layout_toStartOf="@id/status_circle"/>

        <ImageView
            android:id="@+id/status_circle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:paddingTop="6dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:src="@drawable/problem_circle"
            android:contentDescription="@string/check_status" />

</RelativeLayout>